<Window x:Class="ShaderEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
        xmlns:local="clr-namespace:ShaderEditor"
        mc:Ignorable="d"
        Title="Shader Editor" Height="600" Width="1000" 
        Background="#FF2C2C2C">
    

    <Grid Background="#FF211C1C">
        <Grid.ColumnDefinitions>
          
            <ColumnDefinition Width="40*"/>
            
            
            <ColumnDefinition Width="5"/>
            
            
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
        
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <TextBox Grid.Column="0"
                 TextWrapping="Wrap"
                 Text="Your Shader Code Goes Here..."
                 Margin="10"
                 Padding="5"
                 FontFamily="Consolas"
                 FontSize="14"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 Background="#FF1E1E1E"
                 Foreground="#FFDCDCAA"
                 BorderBrush="#FF505050"
                 BorderThickness="1"
                 TextChanged="textChangedEventHandler"/>

      
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      Background="#FF3A3A3A"
                      ResizeBehavior="PreviousAndNext"
                      ResizeDirection="Columns"
                      Width="5"/>

     
        <glWpfControl:GLWpfControl Grid.Column="2"
                                   x:Name="OpenTkControl"
                                   Render="OpenTkControl_OnRender" 
                                   Margin="10"
                                   />
    </Grid>
</Window>